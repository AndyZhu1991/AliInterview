<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="andy.zhu.aliinterview.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/red_oval"
            android:translationX="-70dp"
            android:translationY="-70dp"/>

        <View
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/yellow_oval"
            android:layout_gravity="center_horizontal"
            android:translationY="-115dp"/>
        
        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bg_oval"
            android:layout_gravity="center_horizontal"
            android:translationY="-90dp"/>

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/deep_blue_oval"
            android:layout_gravity="right"
            android:translationX="90dp"
            android:translationY="-60dp"/>
        
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/light_blue_oval"
            android:translationX="-30dp"
            android:translationY="140dp"/>

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/green_oval"
            android:layout_gravity="right"
            android:translationX="42dp"
            android:translationY="100dp"/>

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/deep_blue_oval"
            android:layout_gravity="bottom"
            android:translationX="-70dp"
            android:translationY="100dp"/>

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/light_blue_oval"
            android:layout_gravity="bottom|right"
            android:translationX="80dp"
            android:translationY="100dp"/>
    </FrameLayout>

    <andy.zhu.aliinterview.widget.WhiteCircleView
        android:id="@+id/white_circle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <andy.zhu.aliinterview.widget.FlipChildFrameLayout
        android:id="@+id/flip_child_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <andy.zhu.aliinterview.widget.InputPage
            android:id="@+id/password"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:alpha="0.6"
            android:translationY="60dp"
            app:title="Password"
            app:desc="Enter your secret password"
            app:hint="Password"
            app:input_text="*********"/>

        <andy.zhu.aliinterview.widget.InputPage
            android:id="@+id/email"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:alpha="0.8"
            android:translationY="35dp"
            app:title="Email"
            app:desc="Enter your mail with @yahoo.com"
            app:hint="Email"
            app:input_text="stdzhu@yahoooooo.com"/>

        <andy.zhu.aliinterview.widget.InputPage
            android:id="@+id/welcome"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:background="@android:color/white"
            app:title="Welcome!"
            app:desc="Enter user name you received through mail."
            app:hint="Username"
            app:input_text="Zhu Jinchang"/>
    </andy.zhu.aliinterview.widget.FlipChildFrameLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/blue_gradient">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/header"
            android:layout_marginTop="-30dp"
            android:elevation="5dp"
            android:background="@drawable/roundrect_white_radius20">

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/grids"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/header"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:background="@drawable/green_gradient">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:background="@drawable/purple_gradient">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:background="@drawable/orange_gradient">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grids"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/green_gradient"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/purple_gradient"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/orange_gradient"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:background="@android:color/white">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_android"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_apps"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_add_a_photo"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_archive"/>
            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/light_blue_oval"/>
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>
